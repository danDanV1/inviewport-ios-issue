      30
    ) as |number|
  }}
    <div
      style="display:block;font-size:20px;margin:2px;height:100px;width:100px;float:left;"
    >
      {{#in-viewport
        number=number
        tolerance=(hash top=500 bottom=500 right=500 left=500) as |viewport|
      }}
        {{#if viewport.viewportEntered}}
          <div class="w-full h-full bg-green">
            {{number}}
            in viewport
          </div>
        {{else}}
          <div class="w-full h-full bg-red">
            {{number}}
            outside viewport
          </div>
        {{/if}}
      {{/in-viewport}}
    </div>
  {{/each}}
</div>